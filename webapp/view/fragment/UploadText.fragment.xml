<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" id="hlFlex1">
	<Dialog id="UploadTextAreaDialog" title="{i18n>uploadTextAreaTitle}" class="sapUiPopupWithPadding" draggable="true" contentHeight="395px" contentWidth="865px">
		<VBox class="sapUiSmallMargin" width="800px" height="300px">
			<TextArea id="TextUploadArea" width="800px" height="300px"></TextArea>
		</VBox>
		<beginButton>
			<Button icon="sap-icon://accept" type="Accept" press="onUploadText"/>
		</beginButton>
		<endButton>
			<Button press="onCloseUploadText" iconDensityAware="false" icon="sap-icon://sys-cancel" type="Reject"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>